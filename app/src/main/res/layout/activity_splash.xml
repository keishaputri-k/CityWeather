<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5DCCFF"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/iv_sun_splash"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cloud_splash"
        app:layout_constraintEnd_toEndOf="@+id/iv_cloud_splash"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="@+id/iv_cloud_splash"
        app:layout_constraintTop_toTopOf="@+id/iv_cloud_splash"
        app:layout_constraintVertical_bias="0.415"
        app:srcCompat="@drawable/ic_sun"
        android:contentDescription="@string/txt_image_view" />

    <ImageView
        android:id="@+id/iv_cloud_splash"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407"
        app:srcCompat="@drawable/ic_cloud"
        android:contentDescription="@string/txt_image_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>